[user]
	email = david.fernandez1@ibm.com
[alias]
	conflicts = !vim $(git diff --name-only --diff-filter=U)
[diff]
  tool = default-difftool
[difftool "default-difftool"]
  cmd = vimx -f '+next' '+execute \"DirDiff\" argv(0) argv(1)' $LOCAL $REMOTE # '+syntax off'
[merge]
	tool = vimdiff
	conflictstyle = diff3
